{
  "name": "cocktail-curator",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:server": "node server/main.js",
    "start:client": "budo ./client/main.js:bundle.js --pushstate --dir ./client/public --live",
    "lint": "xo",
    "prebuild": "cp -r ./client/public/ ./client/dist",
    "build": "browserify ./client/main.js -o ./dist/bundle.js -t [ babelify --presets [ env ] ]",
    "test": "jasmine ./client/specs/specs.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chtinahow/cocktail-curator.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chtinahow/cocktail-curator/issues"
  },
  "homepage": "https://github.com/chtinahow/cocktail-curator#readme",
  "dependencies": {
    "babel-preset-env": "^1.6.0",
    "babelify": "^7.3.0",
    "body-parser": "^1.18.0",
    "browserify": "^14.4.0",
    "budo": "^10.0.4",
    "cors": "^2.8.4",
    "eslint": "^4.7.0",
    "express": "^4.15.4",
    "hover-engine": "^1.2.0",
    "jasmine": "^2.8.0",
    "node-fetch": "^1.7.3",
    "request": "^2.81.0",
    "tram-one": "^2.0.0",
    "urlencode": "^1.1.0",
    "xo": "^0.18.2"
  },
  "xo": {
    "envs": [ "node", "browser", "jasmine" ],
    "semicolon": false,
    "space": 2,
    "rules": {
      "import/newline-after-import": [ "off" ],
      "capitalized-comments": [ "off" ],
      "arrow-parens": [
        "error",
        "as-needed",
        {
          "requireForBlockBody": true
        }
      ]
    }
  }
}
